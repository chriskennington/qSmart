<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <padding
                android:top="10dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="10dp"/>

            <size
                android:width="100dp"
                android:height="100dp"/>

            <stroke
                android:width="3dp"
                android:color="#000"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <solid android:color="#FF0000"/>
        </shape>
    </item>

</layer-list>